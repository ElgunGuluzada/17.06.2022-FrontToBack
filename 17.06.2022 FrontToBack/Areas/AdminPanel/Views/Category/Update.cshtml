@model Category
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminPanel/Views/_AdminLayout.cshtml";
}

  <div class="card card-light">
              <div class="card-header">
                <h3 class="card-title">Create New Category</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <form method="post">
                  <div class="row">
                    <div class="col-sm-6">
                      <!-- text input -->
                      <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input id="categoryName" asp-for="@Model.Name" class="form-control" placeholder="Name ...">
                        <span  class="text-danger" asp-validation-for="Name"></span>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <!-- textarea -->
                      <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <textarea id="categoryDesc" asp-for="@Model.Description" class="form-control" disabled rows="3" placeholder="Enter ..."></textarea>
                        <span  class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    </div>
                  </div>
                 <button type="submit" class="btn btn-success">Submit</button> 
                 <a asp-controller="category" asp-action="index" class="btn btn-danger">Cancel</a>
                </form>
              </div>
              <!-- /.card-body -->
            </div>

<script src="~/admin/plugins/jquery/jquery.min.js"></script>

@section Scripts{
<script src="~/admin/dist/js/main.js"></script>
<script src="https://cdn.ckeditor.com/ckeditor5/34.2.0/classic/ckeditor.js"></script>
<!-- Jquery Validation cdn -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<!-- Asp Jquery Validation cdn-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
 <script>
 ClassicEditor
       .create( document.querySelector( '#Description' ) )
       .then( editor => {
       console.log( editor );
       } )
      .catch( error => {
       console.error( error );
       } );
 </script>
}


